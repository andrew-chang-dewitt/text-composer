{
  "name": "text-composer",
  "version": "0.2.0-a",
  "description": "",
  "main": "dist/lib.js",
  "types": "dist/lib.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "lint": "prettier --config .prettierrc.yaml --write './(*.html|*.js|*.json|src/**/*.ts)'",
    "test": "mocha",
    "coverage": "nyc npm run test",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean && npm run lint && npm run coverage",
    "build": "tsc",
    "release": "./scripts/release",
    "watch": "tsc-watch -p tsconfig.json",
    "dev": "tsc-watch -p tsconfig.json --onSuccess \"npm test\""
  },
  "nyc": {
    "all": true,
    "reporter": [
      "text"
    ],
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/dist/**",
      "**/*.spec.ts"
    ]
  },
  "mocha": {
    "extension": [
      "ts",
      "tsx"
    ],
    "spec": [
      "src/**/*.spec.ts"
    ],
    "require": "ts-node/register"
  },
  "author": "Andrew Chang-DeWitt",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^13.11.1",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "chai": "^4.2.0",
    "mocha": "^7.1.2",
    "nyc": "^15.0.1",
    "prettier": "^2.0.4",
    "tsc-watch": "^4.2.3",
    "ts-node": "^8.9.1",
    "typescript": "^3.8.3"
  }
}
